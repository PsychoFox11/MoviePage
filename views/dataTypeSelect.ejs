<% if (formItem.type === 'checkbox' || formItem.type === 'date' || formItem.type === 'year' || formItem.type === 'text' || formItem.type === 'dropdown') { %>
    <%= formItem.type %>
<% } else if (formItem.type === 'number') { %> 
    <select name="dataType" id="dataTypeSelector">
        <option value="int">Whole Number</option>
        <option value="float" 
        <% if (formItem.dataType === 'float') { %>
            selected
        <% } %>
            >Decimal Number</option>
    </select>
<% } %>