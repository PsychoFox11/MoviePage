<div id="signupDiv" class="loginDiv">
    <img id="leftReel" src="images/moviereel.jpg" width="270" height="270"</img>
    <img id="rightReel" src="images/moviereel.jpg" width="270" height="270"</img>
    <form action="" method="POST" id="signUpForm" class="signInForm">
        <p id="signText" class="centered">Sign in</p>
        <span>Username</span><br>
        <input type="text" name="username" placeholder="username" required></input><br><br>
        <span>Password</span><br>
        <input type="password" name="password" placeholder="password" required></input><br><br>
        <span>Email</span><br>
        <input type="email" name="email" placeholder="email address" required></input><br><br>
        <span>First Name</span><br>
        <input type="text" name="firstName" placeholder="First Name" required></input><br><br>
        <span>Last Name</span><br>
        <input type="text" name="lastName" placeholder="Last Name" required></input><br><br>
        <input id="signupSubmit" type="submit" name="submit" value="Sign Up"></input>
        <button id="loginBtn" type="button">Log In</button>
        <!-- <a id="forgotLink" href="">Forgot password?</a> -->
    </form>
</div>